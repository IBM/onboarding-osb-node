{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts", ".eslintrc.js"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/logs", "src/tests"]
}
