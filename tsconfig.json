{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "*": ["../node_modules/*", "types/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "exclude": ["../node_modules", "**/*.spec.ts"]
}
