{
  "name": "onboarding-osb-node",
  "version": "1.0.0",
  "description": "Open Service Broker Reference App",
  "private": true,
  "main": "src/app.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/IBM/onboarding-osb-node.git"
  },
  "author": "Shohel Rana <cse_shohel@yahoo.com>",
  "license": "MIT",
  "scripts": {
    "watch": "tsc -w",
    "dev": "nodemon src/app.ts",
    "start": "tsc && node dist/app.js",
    "build": "tsc",
    "test": "jest",
    "start:dev": "concurrently \"yarn watch\" \"yarn dev\"",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migrate:generate": "yarn typeorm migration:generate -d ./src/db/data-source.ts -n",
    "migrate": "yarn typeorm migration:run -d ./src/db/data-source.ts",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md}\"",
    "check-types": "tsc --noEmit",
    "prettify": "yarn format"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.15",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "memory-cache": "^0.2.0",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.17"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "concurrently": "^7.0.0",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^27.4.5",
    "lint-staged": "^13.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn prettify"
    ]
  }
}
